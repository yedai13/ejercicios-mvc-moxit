        $(document).ready(function() {
            $("#customers").DataTable();
            $("#customers").on("click",
                ".js-delete",
                function() {

                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete this customer?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/customers/" + button.attr("data-customer-id"),
                                    method: "DELETE",
