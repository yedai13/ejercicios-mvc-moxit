@model List<Movie>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Movies</h1>

@if (@Model.Count == 0)
{
    <h2>There are no movies available yet</h2>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in @Model)
        {
            <tr>
                <td>@Html.ActionLink(@customer.Name, "Details", "Movies", new { id = @customer.Id })</td>
                <td>@customer.Genre.Name</td>
            </tr>

        }
        </tbody>
        
          
        
    </table>
}