@{
}
<partial name="_AdminNavBar" />

<h1>Movies</h1>


<div class="mb-3"><a class="btn btn-primary" asp-action="New" asp-controller="Movies">New Movie</a></div>

<div>
    <table id="movies" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>


@section Scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<a href='movies/edit/" + movie.id + "'>" + movie.name + "</a>";
                        }
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "id",
                        render: function (data, type, movie) {
                            return "<button class='btn btn-link js-delete' data-movie-id=" + movie.id + ">Delete</button>";
                        }
                    }
                ]
            });


            $("#movies").on("click",
                ".js-delete",
                function () {

                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete this movie?",
                        function (result) {
                            if (result) {
                                $.ajax({
                                    url: "api/movies/" + button.attr("data-movie-id"),
                                    method: "DELETE",
                                    success: function () {
                                        table.row(button.parents("tr")).remove().draw();
                                    }
                                });
                            }
                        });
                });

        });

    </script>
}
